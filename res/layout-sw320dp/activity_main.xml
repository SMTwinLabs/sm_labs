<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexlabs.trackmovement.MainActivity" >

    
    <TextView android:id="@+id/coordinates"
        android:layout_above="@+id/content"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/material_deep_teal_200"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        />
    
    <TextView android:id="@+id/minutes"
        android:layout_above="@+id/coordinates"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/material_blue_grey_800"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        />
    
    <RelativeLayout android:id="@+id/content"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="0dp"       
        android:padding="0dp"
        android:text="@string/hello_world"
        android:background = "@drawable/circle"
        android:layout_centerInParent="true">
        
        <Button android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_deep_teal"
            android:layout_centerInParent="true"
            />
        
         <TextView android:id="@+id/minutesView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_white_red_border"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
        
	    <View android:id="@+id/dialView" 
	        android:layout_width="250dp"
	        android:layout_height="250dp"
	        android:focusable="false"
	        android:background="@drawable/timer_material_display_2"
        	android:layout_centerInParent="true"
        	android:padding="0dp"
        	android:layout_margin="0dp"/>
	    
    </RelativeLayout>
    

</RelativeLayout>
