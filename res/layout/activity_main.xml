<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexlabs.trackmovement.MainActivity" >

    
    <TextView android:id="@+id/coordinates"
        android:layout_above="@+id/content"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/material_deep_teal_200"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        />
    
    <TextView android:id="@+id/minutes"
        android:layout_above="@+id/coordinates"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/material_blue_grey_800"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        />
    
    <RelativeLayout android:id="@+id/content"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_margin="0dp"       
        android:padding="0dp"
        android:text="@string/hello_world"
        android:background = "@drawable/circle"
        android:layout_centerInParent="true">
        
        <Button android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_deep_teal"
            android:layout_centerInParent="true"
            />
        
	    <View android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:focusable="false"
	        android:background="@drawable/timer_display_2"/>
	    
    </RelativeLayout>
    

</RelativeLayout>
