<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexlabs.trackmovement.MainActivity"
    android:background="@color/teal">   
    
     <LinearLayout android:id="@+id/buttonArea"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
		android:gravity="center"
		android:background="@color/minutesColor"
	    android:orientation="vertical">
	    <Button android:id="@+id/start_stop_state_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:text="Start"/>
	    
	    <Button android:id="@+id/edit_time_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:background="@null"
	        android:text="Edit"/>
	    
	    <Button android:id="@+id/edit_time_cancel_change_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:text="Cancel"/>    
	    
	    <Button android:id="@+id/edit_time_accept_change_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:background="@null"
	        android:text="Accept"/>
    </LinearLayout>
    
    <RelativeLayout android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"       
        android:padding="0dp"
        android:gravity="center"
        android:layout_toRightOf="@id/buttonArea">
	    
	    <include layout="@layout/dial"/>
    </RelativeLayout>

</RelativeLayout>
