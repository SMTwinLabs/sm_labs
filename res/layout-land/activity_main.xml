<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexlabs.trackmovement.MainActivity" >   
    
     <LinearLayout android:id="@+id/infoView"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_marginTop="100dp"
    android:orientation="vertical">
	    <TextView android:id="@+id/coordinates"
	        android:layout_weight="1"
	        android:layout_height="0dp"
	        android:layout_width="match_parent"
	        android:background="@color/material_deep_teal_200"
	        android:textColor="@android:color/white"
	        android:textSize="12sp"
	        android:layout_marginBottom="5dp"
	        />
	    
	    <TextView android:id="@+id/minutes"
	        android:layout_weight="1"
	        android:layout_height="0dp"
	        android:layout_width="match_parent"
	        android:background="@color/material_blue_grey_800"
	        android:textColor="@android:color/white"
	        android:textSize="12sp"
	        android:layout_marginBottom="5dp"
	        />
    </LinearLayout>
    
    <RelativeLayout android:id="@+id/content"
        android:layout_width="@dimen/clock_selectable_area_width"
        android:layout_height="@dimen/clock_selectable_area_height"
        android:layout_margin="0dp"       
        android:padding="0dp"
        android:text="@string/hello_world"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/infoView">
	    
	    <View android:id="@+id/dialBackgroundView" 
	        android:layout_width="@dimen/clock_dial_diameter"
	        android:layout_height="@dimen/clock_dial_diameter"
	        android:focusable="false"
        	android:background = "@drawable/timer_base"
        	android:layout_centerInParent="true"
        	android:padding="0dp"
        	android:layout_margin="0dp"/>
        
	    <View android:id="@+id/dialView" 
	        android:layout_width="@dimen/clock_dial_diameter"
	        android:layout_height="@dimen/clock_dial_diameter"
	        android:focusable="false"
	        android:background="@drawable/timer_dial"
        	android:layout_centerInParent="true"
        	android:padding="0dp"
        	android:layout_margin="0dp"/>
	    
        
         <TextView android:id="@+id/minutesView"
            android:layout_width="@dimen/miuntes_text_view_size"
            android:layout_height="@dimen/miuntes_text_view_size"
            android:background="@drawable/circle_minutes"
            android:layout_centerInParent="true"
            android:textSize="52sp"
            android:text="0"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </RelativeLayout>
    

</RelativeLayout>
