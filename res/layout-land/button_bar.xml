<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/buttonArea"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
		android:background="@color/button_bar_bg"
		android:padding="5dp">  
    
    <ImageButton android:id="@+id/settings_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:src="@drawable/ic_settings_white_36dp"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="10dp"/>
    <RelativeLayout
       	android:layout_width="wrap_content"
       	android:layout_height="match_parent"
       	android:gravity="center"
       	android:layout_centerHorizontal="true">
    
	    <ImageButton android:id="@+id/start_stop_state_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:layout_marginBottom="10dp"
		        android:src="@drawable/ic_play_circle_outline_white_48dp"/>
		    
	    <ImageButton android:id="@+id/edit_time_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:src="@drawable/ic_timer_white_48dp"
		        android:layout_below="@id/start_stop_state_button"
		        android:visibility="gone"/>
    </RelativeLayout>
   
    <ImageButton android:id="@+id/clear_timer_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:layout_marginBottom="10dp"
	        android:src="@drawable/ic_power_settings_new_white_48dp"
	        android:layout_alignParentBottom="true"/>
    
     <RelativeLayout
       	android:layout_width="wrap_content"
       	android:layout_height="match_parent"
       	android:gravity="center_vertical"
       	android:layout_centerHorizontal="true"
		>  
    
    <ImageButton android:id="@+id/edit_time_cancel_change_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:layout_marginBottom="10dp"
	        android:src="@drawable/ic_clear_white_48dp"
	        android:visibility="gone"/>    
    
    <ImageButton android:id="@+id/edit_time_accept_change_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:src="@drawable/ic_done_white_48dp"
	       	android:layout_below="@id/edit_time_cancel_change_button"
	       	android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>
